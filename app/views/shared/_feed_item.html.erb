<div class="microfave">
  <div class="<%= feed_item.category %>">
    <li id="<%= feed_item.id %>">
      <li class="post">
        <span class="user"><%= link_to gravatar_for(feed_item.user), feed_item.user %>
        </span>
        <span><%= link_to feed_item.user.username, feed_item.user %>
        </span>
      </li>

      <li class="post">
        <span class="item"><a href=http://www.google.com/search?q=<%= feed_item.item.gsub ' ','+' %> target="_blank"><%= feed_item.item %></a></span>
        <span class="category">
          <% if feed_item.category=='Music' %>
            <i class="icomoon-music"></i>
          <% end %>
          <% if feed_item.category=='Book' %>
            <i class="icomoon-book"></i>
          <% end %>
          <% if feed_item.category=='Movie' %>
            <i class="icomoon-camera"></i>
          <% end %>
          <% if feed_item.category=='TV' %>
            <i class="icomoon-tv"></i>
          <% end %>
          <% if feed_item.category=='Website' %>
            <i class="icomoon-screen"></i>
          <% end %>
          <% if feed_item.category=='Food' %>
            <i class="icomoon-food"></i>
          <% end %>
          <% if feed_item.category=='App' %>
            <i class="icomoon-mobile"></i>
          <% end %>
          <% if feed_item.category=='Fashion' %>
            <i class="icomoon-t-shirt"></i>
          <% end %>
          <% if feed_item.category=='Product' %>
            <i class="icomoon-cart"></i>
          <% end %>
          <% if feed_item.category=='Other' %>
            <%= feed_item.category %>
          <% end %>
        </span>
        <section class="content"><%= feed_item.content %></section>
        <nav>
          <span class="timestamp">Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</span>
          <span class="buttons">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="icomoon-share"></i>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to raw('<i class="icomoon-facebook"></i>'), current_user %></li>
              <li><%= link_to raw('<i class="icomoon-twitter"></i>'), current_user %></li>
              <li><%= link_to raw('<i class="icomoon-google-plus"></i>'), current_user %></li>
              <li><%= link_to raw('<i class="icomoon-reddit"></i>'), current_user %></li>
              <li><%= link_to raw('<i class="icomoon-stumbleupon"></i>'), current_user %></li>
            </ul>
            <%= link_to raw('<i class="icomoon-heart"></i>'), current_user %>
            <%= link_to raw('<i class="icomoon-bullhorn"></i>'), current_user %>
            <%= link_to raw('<i class="icomoon-bubbles"></i>'), current_user %>
            <% if current_user?(feed_item.user) %>
            <%= link_to raw('<i class="icomoon-trash"></i>'), feed_item, method: :delete,
                                     data: { confirm: "Are you sure?" },
			             title: feed_item.item, 
                                     title: feed_item.category,
                                     title: feed_item.content %>
            <% end %>
          </span>
        </nav>
      </li>
    </li>
  </div>
</div>
