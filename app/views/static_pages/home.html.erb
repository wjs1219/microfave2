<% if signed_in? %>
  <div class="row">
    <div id="inlineblock">
      <div id="userinfo">
        <section id="center">
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
      <div> 
      <section>
          <%= render 'shared/micropost_form' %>
      </section>
    </div>
    <div id="center">
      <h3>microFAVES</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to microFAVE!</h1>

    <h2>
      Tell people about your favorite things
    </h2>
    <h2>
    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
    </h2>
  </div>
<% end %>
